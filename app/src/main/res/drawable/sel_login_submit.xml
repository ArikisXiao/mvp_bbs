<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient android:angle="0" android:endColor="#ff33b5e5" android:startColor="#ff33b5e5" />
            <corners android:radius="30dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <gradient android:angle="0"  android:startColor="#ff33b5e5" android:endColor="#ff0099cc"/>
            <corners android:radius="30dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="0" android:startColor="#ff33b5e5" android:endColor="#FF00A4E0"/>
            <corners android:radius="30dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

</selector>