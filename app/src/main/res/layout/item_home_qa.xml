<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:id="@+id/ll_home_qa_item_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp">

            <com.mixotc.abbs.CircleImageView
                android:id="@+id/iv_home_qa_item_user_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tv_home_qa_item_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="测试用户名"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_home_qa_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天 11:14"
                android:textSize="10dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_home_qa_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="待回答"
            android:textColor="@color/red_light" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_home_qa_item_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_home_qa_item_top"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_home_qa_item_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[20积分]"
            android:textColor="@color/blue_light" />

        <TextView
            android:id="@+id/tv_home_qa_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="2"
            android:text="我是问题题目"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_home_qa_item_center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_home_qa_item_classify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="问题分类"
            android:textColor="@color/blue_light"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_home_qa_item_answer_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回答：10"
            android:textSize="10dp" />
    </LinearLayout>


</RelativeLayout>