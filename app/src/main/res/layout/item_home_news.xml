<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="134dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_home_news_item_image"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_example"
        android:contentDescription="@string/todo"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_home_news_item_title"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_below="@id/iv_home_news_item_image"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lines="2"
        android:padding="2dp"
        android:text="我是标题我是标题我是标题我是标题"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_home_news_item_title"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:padding="2dp">

        <TextView
            android:id="@+id/tv_home_news_item_reading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_home_news_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="10dp" />
    </LinearLayout>


</RelativeLayout>